{
  "name": "littlefoot-web",
  "version": "0.0.1",
  "private": true,
  "description": "",
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "scripts": {
    "start": "node ./dist/server.js",
    "build": "npm run clean && npm run copy-static-assets && npm run build-ts && npm run lint",
    "build-deploy": "npm run build-ts && npm run copy-static-assets",
    "build-ts": "tsc",
    "lint": "tsc --noEmit && eslint \"**/*.{js,jsx,ts,tsx}\" --quiet --fix",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "clean": "rimraf ./dist tsconfig.tsbuildinfo",
    "debug": "npm run build && npm run watch-debug",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node,Assets\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "watch-ts": "tsc -w",
    "serve-debug": "nodemon --inspect dist/server.js"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "dotenv": "^8.2.0",
    "ejs": "^3.0.1",
    "express": "^4.17.1",
    "express-validator": "^6.3.1",
    "helmet": "^3.21.2",
    "http-status-codes": "^1.4.0",
    "tslib": "^1.10.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/compression": "^1.0.1",
    "@types/eslint": "^6.1.1",
    "@types/express": "^4.17.1",
    "@types/helmet": "0.0.45",
    "@types/jquery": "^3.3.31",
    "@types/node": "^12.12.24",
    "@types/shelljs": "^0.8.5",
    "@typescript-eslint/eslint-plugin": "^2.15.0",
    "@typescript-eslint/parser": "^2.15.0",
    "concurrently": "^5.0.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-json": "^2.0.1",
    "eslint-plugin-prettier": "^3.1.2",
    "nodemon": "^1.19.2",
    "prettier": "^1.19.1",
    "prettier-eslint": "^9.0.1",
    "shelljs": "^0.8.3",
    "rimraf": "^3.0.0",
    "ts-node": "^8.4.1",
    "typescript": "^3.7.4"
  }
}
