{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "importHelpers": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "newLine": "LF",
    "resolveJsonModule": true,
    "composite": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "stripInternal": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
